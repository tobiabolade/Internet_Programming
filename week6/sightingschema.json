{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "title": "Sightings Report",
    "description": "A report of rare animal sightings",
      "type":"object",
        "properties": {
         "sightings" : {
          "type" : "array",
            "items" : {
                 "type" : "object",
                "properties" : {
                     "id" : {"type" : "integer"},
                  "animal" : {"type" : "string"},
                  "number" : {"type" : "integer"},
                  "location" : {"type" : "string"},
                  "date" : {"type" : "string"},
                  "time" : {"type" : "string"},
                  "observer" : {"type" : "object",
                    "properties" : {
                         "name" : {"type" : "string"},
                      "email" : {"type" : "string"}
                    }
                },
                  "observations" : {"type" : "string"}
            }
         }
        }
      }
  }